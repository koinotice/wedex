{
	"compilerOptions": {
		"module": "commonjs",
		"target": "es2017",
		"sourceMap": true,
		"outDir": "build",
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"declaration": false,
		"allowUnusedLabels": false,
		"noImplicitReturns": false,
		"noUnusedLocals": false,
		"removeComments": false
	},
	"exclude": [
		"node_modules",
		"src/tests"
	],
	"include": [
		"src/**/**.ts"
	]
}
