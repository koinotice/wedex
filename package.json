{
	"name": "wedex",
	"version": "1.6.0",
	"description": "Wedex is a rxjs node wrapper for the Wedex Api.",
	"scripts": {
		"build": "tsc",
		"prepublishOnly": "npm run build",
		"test": "node -r dotenv/config node_modules/jest/bin/jest --runInBand",
		"lint": "tslint --project tsconfig.json src/**/*.ts",
		"precommit": "npm run lint",
		"prepush": "npm-run-all --parallel lint"
	},
	"jest": {
		"testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
		"transform": {
			"\\.(ts)$": "<rootDir>/node_modules/ts-jest/preprocessor.js"
		},
		"moduleFileExtensions": [
			"ts",
			"tsx",
			"js",
			"jsx",
			"json",
			"node"
		]
	},
	"main": "build/index.js",
	"types": "build/index.d.ts",
	"author": "koinotice <koinotice@gmail.com>",
	"license": "MIT",
	"homepage": "https://github.com/koinotice/wedex.git#readme",
	"repository": {
		"type": "git",
		"url": "https://github.com/koinotice/wedex.git"
	},
	"engines": {
		"node": ">=8.0.0"
	},
	"keywords": [
		"wedex",
		"cryptocurrency",
		"exchange",
		"nodejs",
		"typescript",
		"api",
		"client",
		"rxjs",
		"observables",
		"bitcoin",
		"altcoin"
	],
	"bugs": {
		"url": "https://github.com/koinotice/wedex/issues"
	},
	"dependencies": {
		"@types/ethereumjs-abi": "^0.6.3",
		"async-validator": "1.8.2",
		"axios": "^0.21.1",
		"bignumber.js": "^9.0.0",
		"bip39": "^3.0.2",
		"blake-hash": "^1.1.0",
		"bn.js": "^5.1.1",
		"ethereumjs-abi": "^0.6.8",
		"ethereumjs-tx": "^2.1.2",


		"ethereumjs-wallet": "^0.6.3",
		"isomorphic-fetch": "^2.2.1",
		"json2typescript": "^1.0.5",
		"node-fetch": "^2.0.0",
		"random-number": "^0.0.9",
		"rxjs": "^5.5.6",
		"sha3": "^2.1.1"
	},
	"devDependencies": {
		"@types/jest": "22.2.3",
		"@types/node": "9.6.7",
		"@types/node-fetch": "1.6.9",
		"blake2b": "^2.1.3",
		"dotenv": "5.0.1",
		"husky": "0.14.3",
		"jest": "22.4.3",
		"jest-cli": "22.4.3",
		"npm-run-all": "4.1.2",
		"ts-jest": "22.4.4",
		"ts-node": "6.0.2",
		"tslint": "5.9.1",
		"typescript": "2.8.3"
	}
}
